<table class="total_table address" border="0">
  <tbody>
    <tr>
      <td><br></br></td>
    </tr>
    <tr>
      <td>{{ recipient.name.first_name | capitalize }}</td>
    </tr>
    <tr class="fssize1">
       <td>{{ mailing_address.address_1 }}</td>
    </tr>
    {% if mailing_address.address_3 %}
    <tr class="fssize1">
      <td>{{ mailing_address.address_3 }}</td>
    </tr>
    {% endif %}
    <tr>
      <td>{{ mailing_address.city | capitalize }}, {{ mailing_address.state }} {{ mailing_address.zip }}</td>
      <% display_mpi_indicator =  show_mpi_indicator if defined? show_mpi_indicator %>
      <% if display_mpi_indicator.nil? %>
        <td style="text-align: right;">{{ notice_number }}</td>
      <% end %>
    </tr>

    {% unless mailing_address.address_3 %}
    <tr class="fssize1">
      <td><br></td>
    </tr>
    {% endunless %}
    <tr>
      <td>
        <br></br>
      </td>
    </tr>
  </tbody>
</table>