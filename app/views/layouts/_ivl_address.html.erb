<table class="total_table address" border="0">
  <tbody>
    <tr>
      <td><br></br></td>
    </tr>
    <tr>
      <td><%= recipient.first_name %></td>
    </tr>
    <tr class="fssize1">
       <td><%= recipient.addresses[0].address_1 %></td>
    </tr>
    <% if recipient.addresses[0].address_2.present? %>
    <tr class="fssize1">
      <td><%= recipient.addresses[0].address_2 %></td>
    </tr>
    <% end %>
    <tr>
      <td><%= recipient.addresses[0].city %>, <%= recipient.addresses[0].state %> <%= recipient.addresses[0].zip %></td>
        <% display_mpi_indicator =  show_mpi_indicator if defined? show_mpi_indicator%>
        <% if display_mpi_indicator.nil? %>
          <td style="text-align: right;"><%= notice.notice_number %></td>
        <% end %>
    </tr>

    <% if !recipient.addresses[0].address_2.present? %>
    <tr class="fssize1">
      <td><br></td>
    </tr>
    <% end %>
    <tr>
      <td>
        <br></br>
      </td>
    </tr>
  </tbody>
</table>