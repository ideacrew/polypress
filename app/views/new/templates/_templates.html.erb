
<div class="content landing">  
  <div class="home">

    <div class="tab-row">
      <div class="tab-content" id="myTabContent"></div>

      <div class="container top-pd">
        <div class="container">
          <div aria-labelledby="inbox-tab" id="inbox" class="tab-pane-hbx" role="tabpanel">
            <div class="col-xs-12">
              <div class="notices_index_list">
                
                <%#= render_datatable(@datatable) %>
                <div class="row">
                <div class='col-xs-12 text-right'>
                  <h1 class="heading-text"></h1>
                  <span class="pull-right mb-2">
                    <%= link_to 'Add Template', new_new_template_path, class: "btn btn-primary notice-preview", remote: true %>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadTemplatesModal">
                      <i class='far fa-file-alt' aria-hidden='true'></i> Upload Templates
                    </button>
                    <%= link_to "<i class='fas fa-cloud-download-alt' aria-hidden='true'></i> Download Templates".html_safe, download_notices_new_templates_path, class: "btn btn-primary download-notices" %>
                  </span>
                </div>
                <div class='col-xs-12 mt-3'>
                <table class="table table-striped template-table" style="font-size: 0.8rem;">
                  <thead>
                    <tr>
                      <th scope="col"></th>
                      <th scope="col">Template Id</th>
                      <th scope="col">Title</th>
                      <th scope="col">Format</th>
                      <th scope="col">Description</th>
                      <th scope="col">Event</th>
                      <th scope="col">Marketplace</th>
                      <%# <th scope="col">Print Code</th> %>
                      <%# <th scope="col">Recipient</th> %>
                      <th scope="col">Last Updated At</th>
                      <th scope="col">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render partial: 'template_row', collection: Templates::TemplateModel.all, as: :template %>
                  </tbody>
                </table>
                </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="uploadTemplatesModal" tabindex="-1" aria-labelledby="uploadTemplatesModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="uploadTemplatesModalLabel">Upload Notices</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_tag(upload_notices_new_templates_path, multipart: true, method: :post) do %>
      <div class="modal-body">
        <%= file_field_tag :file %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-bs-dismiss="modal">Close</button>
        <%= submit_tag 'Upload', class: 'btn btn-primary', disabled: false %>
      </div>
      <% end %>
    </div>
  </div>
</div>